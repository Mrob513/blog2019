<table class="usertable">
  <thead>
    <tr>
      <th>Login</th>
      <th>Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.login %></td>
        <td><%= user.admin %></td>
        <td class="userbutton"><%= link_to 'Show', user %></td>
        <td class="userbutton"><%= link_to 'Edit', edit_user_path(user) %></td>
        <td class="userbutton"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="userbutton" style="margin-left:20px">
  <%= link_to 'New User', new_user_path %>
  </div>
